<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".signIn">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/sona_logo"
        app:srcCompat="@drawable/sona_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        />

    <TextView
        android:id="@+id/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#1070bf"
        android:textSize="24sp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:lineSpacingMultiplier="1.46"
        android:fontFamily="@font/poppinsregular"

        />


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
         android:layout_marginEnd="40dp"
        android:layout_marginTop="27dp"
         android:hint="Email"
        android:inputType="text"
        android:textColorHint="#2699fb"
        android:layout_below="@id/h1"
        android:background="@drawable/signin_box"
        android:fontFamily="@font/poppinsregular"
        android:paddingLeft="20dp"
        android:textSize="14sp"


        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
         android:hint="Password"

        android:inputType="textPassword"
        android:textColorHint="#2699fb"
        android:layout_below="@id/email"

        android:background="@drawable/signin_box"
        android:paddingLeft="20dp"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14sp"

        />


    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="31.5dp"
        android:fontFamily="@font/poppinsregular"
        android:gravity="right"
        android:text="Forgot Password ?"
        android:textColor="#1070bf"
        android:textSize="14sp"

        />

    <Button
        android:id="@+id/sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="46dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="60dp"
        android:textColor="#FFFFFF"
        android:text="Continue"
        android:background="@drawable/signin_continue"
        android:layout_below="@id/forgot_password"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="14sp"

        />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/sign_up"
        android:layout_marginBottom="23dp"
        android:fontFamily="@font/poppinsregular"
        android:textSize="10sp"
        android:lineSpacingMultiplier="2.2"
        android:textColor="#1070bf"/>
    <Button
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:background="#63a740"
        android:fontFamily="@font/poppinssemibold"


        />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in">



    <ImageButton
        android:id="@+id/google_signin"
        android:layout_width="58dp"
        android:layout_height="58dp"
          android:background="@drawable/roundbuttong"
        android:textColor="#1070bf"
          android:layout_alignParentStart="false"
        android:layout_toLeftOf="@+id/centerPoint"
        android:scaleType="fitCenter" />


        <TextView
            android:id="@+id/centerPoint"
            android:text=""
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />
    <Button
        android:id="@+id/fb_signin"
        android:layout_width="58dp"
        android:layout_height="58dp"

        android:textColor="#1070bf"
        android:background="@drawable/roundbuttonf"
        android:layout_alignParentEnd="false"
        android:layout_toRightOf="@+id/centerPoint" />

        />
    </RelativeLayout>

</RelativeLayout>